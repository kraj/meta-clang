         continue;
 
+      // We might have found existing directory with GCCVersion, but it
+      // might not have GCC libraries we are looking for (i.e. return an
+      // empty Mulilibs)
+      if (Multilibs.size() == 0)
+        continue;
+
       Version = CandidateVersion;
       GCCTriple.setTriple(CandidateTriple);
